{% extends "layout.njk" %}

{% block content %}
  <section class="hero">
    <div class="container hero-inner">
      <div class="hero-copy">
        <p class="eyebrow">{{ site.tagline }}</p>
        <h1 class="hero-title">{{ hero.headline }}</h1>
        <p class="hero-subtitle">{{ hero.subheadline | trim }}</p>
        <div class="hero-cta">
          <a class="btn btn-primary" href="{{ hero.primary_cta.href }}">{{ hero.primary_cta.label }}</a>
          <a class="btn btn-link" href="{{ hero.secondary_cta.href }}">{{ hero.secondary_cta.label }}</a>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <h2>{{ ui.sections.about_title }}</h2>
      {% if about.headline %}
        <p class="section-lead">{{ about.headline | trim }}</p>
      {% endif %}
      {% if about.bio_paragraphs and about.bio_paragraphs.length %}
        <p>{{ about.bio_paragraphs[0] }}</p>
      {% endif %}
      <a class="btn btn-link" href="./about.html">Read more</a>
    </div>
  </section>

  <section class="section section-alt">
    <div class="container">
      <h2>{{ ui.sections.services_title }}</h2>
      <div class="cards">
        {% for s in services %}
          <article class="card">
            <h3>{{ s.title }}</h3>
            <p class="card-summary">{{ s.summary }}</p>
            {% if s.bullets and s.bullets.length %}
              <ul class="card-bullets">
                {% for b in s.bullets %}
                  <li>{{ b }}</li>
                {% endfor %}
              </ul>
            {% endif %}
            <a class="btn btn-link" href="./services.html#{{ s.id }}">View details</a>
          </article>
        {% endfor %}
      </div>
      <div class="section-actions">
        <a class="btn btn-primary" href="./services.html">See all services</a>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <h2>{{ ui.sections.process_title }}</h2>
      <p class="section-lead">{{ process.headline | trim }}</p>
      <ol class="timeline">
        {% for step in process.steps %}
          <li class="timeline-item">
            <div class="timeline-dot" aria-hidden="true"></div>
            <div class="timeline-content">
              <div class="timeline-title">{{ step.title }}</div>
              <div class="timeline-desc">{{ step.description | trim }}</div>
            </div>
          </li>
        {% endfor %}
      </ol>
      <a class="btn btn-link" href="./process.html">See the full process</a>
    </div>
  </section>

  <section class="section section-alt">
    <div class="container">
      <h2>{{ ui.sections.contact_title }}</h2>
      <p class="contact-intro">{{ contact.intro | trim }}</p>
      <div class="contact-cta">
        <a class="btn btn-primary" href="./contact.html">Contact</a>
        <a class="btn btn-link" href="{{ hero.primary_cta.href }}">{{ contact.call_to_action }}</a>
      </div>
    </div>
  </section>
{% endblock %}
