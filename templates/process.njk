{% extends "layout.njk" %}

{% block content %}
  <section class="page-hero">
    <div class="container">
      <h1 class="page-title">{{ ui.sections.process_title }}</h1>
      <p class="page-subtitle">A simple, repeatable path from idea to rollout.</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <ol class="timeline">
        {% for step in process.steps %}
          <li class="timeline-item">
            <div class="timeline-dot" aria-hidden="true"></div>
            <div class="timeline-content">
              <div class="timeline-title">{{ step.title }}</div>
              <div class="timeline-desc">{{ step.description | trim }}</div>
            </div>
          </li>
        {% endfor %}
      </ol>
    </div>
  </section>
{% endblock %}
