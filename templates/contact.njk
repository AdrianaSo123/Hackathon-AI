{% extends "layout.njk" %}

{% block content %}
  <section class="page-hero">
    <div class="container">
      <h1 class="page-title">{{ ui.sections.contact_title }}</h1>
      <p class="page-subtitle">{{ contact.intro | trim }}</p>
    </div>
  </section>

  <section class="section section-alt">
    <div class="container">
      <div class="contact-layout">
        <h2>{{ contact.headline }}</h2>
        <p class="contact-note">A short note is perfect—include whatever you have, and we’ll take it from there.</p>

        {% if contact.what_to_include and contact.what_to_include.length %}
          <ul class="highlights">
            {% for item in contact.what_to_include %}
              <li>{{ item }}</li>
            {% endfor %}
          </ul>
        {% endif %}

        <div class="contact-grid" aria-label="Contact methods">
          <div class="contact-item">
            <div class="contact-label">{{ ui.labels.email }}</div>
            <a class="contact-link" href="mailto:{{ contact.email }}">Send an email</a>
          </div>

          <div class="contact-item">
            <div class="contact-label">{{ ui.labels.linkedin }}</div>
            <a class="contact-link" href="{{ contact.linkedin }}" target="_blank" rel="noopener noreferrer">{{ contact.linkedin_label }}</a>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
